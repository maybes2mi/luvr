<body>
  <h1>Dabloon Love Hub 💌</h1>
  <div class="section">
    <h2>Love Letter Generator 💕</h2>
    <p id="love-message">Click below to reveal a reason I love you.</p>
    <button onclick="showLove()">Reveal 💖</button>
  </div>

  <div class="section">
    <h2>Jazz & Oshawott Clicker Game 🎷</h2>
    <p>Dabloons: <span class="click-count" id="dabloons">0</span></p>
    <button onclick="earnDabloon()">Get Dabloon 💰</button>
    <p id="store-msg"></p>
    <button onclick="spendDabloon('sushi')">Spend 5 on Sushi Date 🍣</button>
    <button onclick="spendDabloon('hang')">Spend 1 on Hang Out 💞</button>
  </div>

  <div class="section">
    <h2>Countdown to Special Day 📅</h2>
    <p id="countdown"></p>
  </div>

  <script>
    // Love Letter Generator
    const loveReasons = [
      "You're my safe place",
      "You make me laugh until I can't breathe",
      "Your jazz taste is elite",
      "Oshawott has nothing on you",
      "You make dabloon debt feel worth it",
      "I feel like the real me around you"
    ];
    let loveIndex = 0;
    function showLove() {
      document.getElementById('love-message').innerText = loveReasons[loveIndex % loveReasons.length];
      loveIndex++;
    }

    // Clicker Game
    let dabloons = 0;
    function earnDabloon() {
      dabloons++;
      updateDabloonDisplay();
    }
    function spendDabloon(item) {
      if (item === 'sushi' && dabloons >= 5) {
        dabloons -= 5;
        document.getElementById('store-msg').innerText = "🍣 Sushi Date unlocked!";
      } else if (item === 'hang' && dabloons >= 1) {
        dabloons -= 1;
        document.getElementById('store-msg').innerText = "💞 A hangout day redeemed!";
      } else {
        document.getElementById('store-msg').innerText = "Not enough dabloons 🙁";
      }
      updateDabloonDisplay();
    }
    function updateDabloonDisplay() {
      document.getElementById('dabloons').innerText = dabloons;
    }

    // Countdown Timer
    const targetDate = new Date("August 15, 2025 00:00:00").getTime();
    const countdownEl = document.getElementById("countdown");
    setInterval(() => {
      const now = new Date().getTime();
      const distance = targetDate - now;
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      countdownEl.innerText = `${days}d ${hours}h ${minutes}m until Dabloon Forgiveness Day 💗`;
    }, 1000);
  </script>
</body>
</html>
